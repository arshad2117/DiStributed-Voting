<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/css?family=Anton|Lora" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/static/css/styles.css">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js">
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
      $(document).ready(function(){
        $("button").click(function (){
          let name = document.getElementById('first_name').value;
          let email = document.getElementById('email').value;
          let phone_no = document.getElementById('phone_no').value;
          let PAN = document.getElementById('PAN').value;
          let aadhaar = document.getElementById('aadhaar').value;
          let voter_id = document.getElementById('voter_id').value;
          $.post("checkCredentials/", {
            first_name: name,
            email: email, 
            phone_no: phone_no,
            voter_id: voter_id,
            PAN: PAN,
            aadhaar: aadhaar
          }, function(data, status){
            location.href = '/getpassword';
          });
        })
      })
    </script>
  </head>
  <body>
    <div style="text-align: center;margin-top: 50px" class="hy">
      E-voting
    </div>
    <div style="text-align: center;margin-top: 10px" class="ht">
      Please enter your details
    </div>
    <div class="row">
      <div class="row" style="margin-top: 20px">
        <div class="col s2">
        </div>
        <div class="input-field col s4">
          <input name="first_name" id="first_name" type="text" class="validate">
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s4">
          <input name="email" id="email" type="text" class="validate">
          <label for="email">Email ID</label>
        </div>
        <div class="col s2">
        </div>
      </div>
      <div class="row">
        <div class="col s2">
        </div>
        <div class="input-field col s4">
          <input name="PAN" id="PAN" type="text" class="validate">
          <label for="PAN">PAN No.</label>
        </div>
        <div class="input-field col s4">
          <input name="aadhaar" id="aadhaar" type="text" class="validate">
          <label for="aadhaar">Aadhaar No.</label>
        </div>
        <div class="col s2">
        </div>
      </div>
      <div class="row" style="padding-bottom: 70px">
        <div class="col s2">
        </div>
        <div class="input-field col s4">
          <input name="voter_id" id="voter_id" type="text" class="validate">
          <label for="voter_id">Voter ID</label>
        </div>
        <div class="input-field col s4">
          <input name = "phone_no" id="phone_no" type="text" class="validate">
          <label for="phone_no">Phone Number</label>
        </div>
        <div class="col s2">
        </div>
      </div>
      <%if (error == 1) { %>
        <div style="text-align: center; margin-top: -90px; color: red">
          Invalid credentials
        </div>
      <% } %>
      <button class="btn waves-effect waves-light" name="action" style=" margin-left: 570px; height: 40px; width: 200px; ">Submit

    </button>

  </div>
  </body>
</html>
